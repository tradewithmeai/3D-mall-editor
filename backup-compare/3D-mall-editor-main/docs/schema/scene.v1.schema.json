{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scene v1 Format",
  "description": "Canonical format for 3D mall floorplan editor scenes",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "grid"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["schema", "version"],
      "additionalProperties": true,
      "properties": {
        "schema": {
          "type": "string",
          "const": "scene.v1"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "author": {
          "type": "string"
        }
      }
    },
    "grid": {
      "type": "object",
      "required": ["width", "height", "cellSize"],
      "additionalProperties": false,
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "height": {
          "type": "integer",
          "minimum": 1,
          "maximum": 200
        },
        "cellSize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        }
      }
    },
    "tiles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "floor": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "edges": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "horizontal": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "vertical": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    }
  }
}