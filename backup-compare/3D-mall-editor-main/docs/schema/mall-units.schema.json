{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "units": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^unit-[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "gridRect": {
            "type": "object",
            "properties": {
              "x": {
                "type": "integer",
                "minimum": 0
              },
              "y": {
                "type": "integer", 
                "minimum": 0
              },
              "w": {
                "type": "integer",
                "minimum": 1
              },
              "h": {
                "type": "integer",
                "minimum": 1
              }
            },
            "required": ["x", "y", "w", "h"],
            "additionalProperties": false
          },
          "entrance": {
            "type": "object",
            "properties": {
              "side": {
                "type": "string",
                "enum": ["north", "south", "east", "west"]
              },
              "offset": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": ["side", "offset"],
            "additionalProperties": false
          },
          "type": {
            "type": "string",
            "enum": ["retail", "service", "food", "kiosk", "corridor"]
          },
          "occupancy": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "enum": ["vacant", "occupied", "reserved"]
              },
              "tenantId": {
                "type": "string",
                "pattern": "^tenant-[a-z0-9-]+$"
              },
              "since": {
                "type": "string",
                "format": "date"
              }
            },
            "required": ["status"],
            "additionalProperties": false,
            "allOf": [
              {
                "if": {
                  "properties": { "status": { "const": "occupied" } }
                },
                "then": {
                  "required": ["tenantId"]
                }
              },
              {
                "if": {
                  "properties": { "status": { "const": "vacant" } }
                },
                "then": {
                  "not": {
                    "anyOf": [
                      { "required": ["tenantId"] },
                      { "required": ["since"] }
                    ]
                  }
                }
              }
            ]
          },
          "meta": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["id", "name", "gridRect", "entrance"],
        "additionalProperties": false
      }
    }
  }
}