{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "grid"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^mall-[a-z0-9-]+$"
    },
    "grid": {
      "type": "object",
      "required": ["width", "height", "cellSize"],
      "additionalProperties": false,
      "properties": {
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        },
        "cellSize": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "unitsIndex": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "rect"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "rect": {
            "type": "object",
            "required": ["x", "y", "w", "h"],
            "additionalProperties": false,
            "properties": {
              "x": {
                "type": "integer",
                "minimum": 0
              },
              "y": {
                "type": "integer",
                "minimum": 0
              },
              "w": {
                "type": "integer",
                "minimum": 1
              },
              "h": {
                "type": "integer",
                "minimum": 1
              }
            }
          }
        }
      }
    },
    "instances": {
      "type": "array"
    }
  }
}